<h1>Listing loans</h1>

<% form_for(@loan) do |f| %>
<table>
  <tr>
    <th>Desc</th>
    <th>Borrower</th>
    <th>Start date</th>
    <th>Return date</th>
  </tr>

<% @loans.each do |loan| %>
  <tr>
    <td><%=h loan.desc %></td>
    <td><%=h loan.borrower %></td>
    <td><%=h loan.start_date %></td>
    <td><%=h loan.return_date %></td>
    <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
    <td><%= link_to 'Destroy', loan, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
  <tr>
    <td><%= f.text_field :desc %></td>
    <td><%= f.text_field :borrower %></td>
    <td colspan="4"> <%= f.submit 'Create' %></td>
    
  </tr>
</table>
<% end %>
