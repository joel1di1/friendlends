#pageheader
  .content
    %h1= t 'sign_up'

#container
  .content
    #signupbox
      #signupwrap
        - form_for resource_name, resource, :url => registration_path(resource_name) do |f|
          = f.error_messages
          %table
            %tbody
              %tr
                %td.label= f.label :email
                %td.field= f.text_field :email
              %tr
                %td.label= f.label :password
                %td.field= f.password_field :password
              %tr
                %td.label= f.label :password_confirmation
                %td.field= f.password_field :password_confirmation
              %tr
                %td
                %td= f.submit t('sign_up')
